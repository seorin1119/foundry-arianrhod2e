{{!-- Attack Roll Chat Card --}}
<div class="ar-combat-card ar-attack-card">
  <header class="ar-card-header">
    <img class="ar-card-icon" src="{{weaponImg}}" alt="{{weaponName}}" width="32" height="32" />
    <div class="ar-card-title">
      <h3>{{localize "ARIANRHOD.AttackRoll"}}</h3>
      <span class="ar-card-subtitle">{{weaponName}}</span>
    </div>
  </header>
  <div class="ar-card-row ar-achievement-row">
    <span class="ar-card-label">{{localize "ARIANRHOD.Achievement"}}</span>
    <span class="ar-card-value {{#if isCritical}}critical{{/if}} {{#if isFumble}}fumble{{/if}}">{{total}}</span>
  </div>
  {{#if isCritical}}
  <div class="ar-card-badge ar-badge-critical">
    <i class="fas fa-star"></i> {{localize "ARIANRHOD.Critical"}}! (6&times;{{sixCount}})
  </div>
  {{/if}}
  {{#if isFumble}}
  <div class="ar-card-badge ar-badge-fumble">
    <i class="fas fa-skull"></i> {{localize "ARIANRHOD.Fumble"}}!
  </div>
  {{/if}}
  {{#if fateDice}}
  <div class="ar-card-fate-notice">
    <i class="fas fa-sparkles"></i> {{fateNotice}}
  </div>
  {{/if}}
  <div class="ar-card-actions">
    <button type="button" class="ar-chat-btn ar-damage-btn"
            data-actor-id="{{actorId}}"
            data-weapon-id="{{weaponId}}"
            data-critical="{{isCritical}}">
      <i class="fas fa-burst"></i> {{localize "ARIANRHOD.RollDamage"}}
    </button>
  </div>
</div>
