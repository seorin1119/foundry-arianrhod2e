{{!-- Skills Tab --}}
<section class="tab skills {{tab.cssClass}}" data-group="primary" data-tab="skills">

  {{!-- Class Info and Filter --}}
  <section class="skills-header">
    <div class="skills-header-row">
      <div class="skills-class-info">
        <strong>{{localize "ARIANRHOD.AvailableClasses"}}:</strong>
        {{#if system.mainClass}}
          <span class="class-main">{{localize (lookup config.mainClasses system.mainClass)}}</span>
        {{else}}
          <span class="class-none">{{localize "ARIANRHOD.NoMainClass"}}</span>
        {{/if}}
        {{#if system.supportClass}}
          / <span class="class-support">{{localize (lookup config.supportClasses system.supportClass)}}</span>
        {{else}}
          / <span class="class-none">{{localize "ARIANRHOD.NoSupportClass"}}</span>
        {{/if}}
      </div>
      <div class="skills-filter">
        <label>{{localize "ARIANRHOD.FilterSkills"}}:</label>
        <select data-action="filterSkills">
          <option value="all">{{localize "ARIANRHOD.AllSkills"}}</option>
          <option value="main">{{localize "ARIANRHOD.MainClassOnly"}}</option>
          <option value="support">{{localize "ARIANRHOD.SupportClassOnly"}}</option>
          <option value="general">{{localize "ARIANRHOD.GeneralSkills"}}</option>
        </select>
      </div>
    </div>
  </section>

  {{!-- Acquired Skills --}}
  <section class="item-section">
    <div class="item-section-header flexrow">
      <h3>{{localize "ARIANRHOD.AcquiredSkills"}}</h3>
      <a data-action="createItem" data-type="skill" title="{{localize 'ARIANRHOD.ItemCreate'}}">
        <i class="fas fa-plus"></i>
      </a>
    </div>
    {{#if skills}}
    <ol class="item-list skills-list">
      <li class="item-header flexrow">
        <span class="item-name">{{localize "ARIANRHOD.Name"}}</span>
        <span class="skill-level-col">{{localize "ARIANRHOD.SkillLevel"}}</span>
        <span class="item-detail">{{localize "ARIANRHOD.SkillClass"}}</span>
        <span class="skill-timing-col">{{localize "ARIANRHOD.Timing"}}</span>
        <span class="item-detail-sm">{{localize "ARIANRHOD.Cost"}}</span>
        <span class="item-detail-sm">{{localize "ARIANRHOD.Range"}}</span>
        <span class="item-detail-sm">{{localize "ARIANRHOD.Target"}}</span>
        <span class="item-controls"></span>
      </li>
      {{#each skills as |item|}}
      <li class="item flexrow" data-item-id="{{item._id}}" title="{{item.system.effect}}">
        <span class="item-name">
          {{#unless (eq item.system.timing "passive")}}
          <a class="skill-activate-btn" data-action="activateSkill" title="{{localize 'ARIANRHOD.SkillActivate'}}">
            <i class="fas fa-dice-d20"></i>
          </a>
          {{/unless}}
          <span class="clickable" data-action="postItem">
            <img src="{{item.img}}" width="24" height="24" />
            {{item.name}}
          </span>
        </span>
        <span class="skill-level-col">
          <button type="button" class="skill-level-btn" data-action="decreaseSkillLevel" data-item-id="{{item._id}}"
                  title="{{localize 'ARIANRHOD.DecreaseSkillLevel'}}">-</button>
          <span class="skill-level-value">{{item.system.level}}/{{item.system.maxLevel}}</span>
          <button type="button" class="skill-level-btn" data-action="increaseSkillLevel" data-item-id="{{item._id}}"
                  title="{{localize 'ARIANRHOD.IncreaseSkillLevel'}}">+</button>
        </span>
        <span class="item-detail">{{item.system.skillClassLabel}}</span>
        <span class="skill-timing-col">
          <span class="timing-badge timing-{{item.system.timing}}">{{item.system.timingLabel}}</span>
        </span>
        <span class="item-detail-sm">{{item.system.cost}}</span>
        <span class="item-detail-sm">{{item.system.range}}</span>
        <span class="item-detail-sm">{{item.system.target}}</span>
        <span class="item-controls">
          <a data-action="editItem" title="{{localize 'ARIANRHOD.ItemEdit'}}"><i class="fas fa-edit"></i></a>
          <a data-action="deleteItem" title="{{localize 'ARIANRHOD.ItemDelete'}}"><i class="fas fa-trash"></i></a>
        </span>
      </li>
      {{/each}}
    </ol>
    {{else}}
    <p class="no-skills-msg">{{localize "ARIANRHOD.NoSkillsAcquired"}}</p>
    {{/if}}
  </section>

</section>
