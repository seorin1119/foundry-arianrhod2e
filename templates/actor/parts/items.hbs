{{!-- Items Tab --}}
<section class="tab items {{tab.cssClass}}" data-group="primary" data-tab="items">

  {{!-- Equipment Slots Visual Grid --}}
  <section class="equip-slots">
    <h3><i class="fas fa-gem"></i> {{localize "ARIANRHOD.EquipSlots"}}</h3>
    <div class="equip-slots-grid">
      {{#each equipSlots as |slot|}}
      <div class="equip-slot-card{{#if slot.item}} filled{{/if}}" title="{{slot.label}}{{#if slot.item}}: {{slot.item.name}}{{/if}}">
        <div class="slot-icon">
          <i class="fas {{slot.icon}}"></i>
        </div>
        <div class="slot-info">
          <span class="slot-label">{{slot.label}}</span>
          {{#if slot.item}}
          <span class="slot-item-name">{{slot.item.name}}</span>
          <span class="slot-stats">{{slot.summary}}</span>
          {{else}}
          <span class="slot-empty">â€”</span>
          {{/if}}
        </div>
      </div>
      {{/each}}
    </div>
  </section>

  {{!-- Weapons --}}
  <section class="item-section">
    <div class="item-section-header flexrow">
      <h3><i class="fas fa-gavel"></i> {{localize "ARIANRHOD.Weapon"}}</h3>
      <a data-action="createItem" data-type="weapon" title="{{localize 'ARIANRHOD.ItemCreate'}}">
        <i class="fas fa-plus"></i>
      </a>
    </div>
    <ol class="item-list">
      <li class="item-header flexrow">
        <span class="item-name">{{localize "ARIANRHOD.Name"}}</span>
        <span class="item-detail-sm">{{localize "ARIANRHOD.Accuracy"}}</span>
        <span class="item-detail-sm">{{localize "ARIANRHOD.Attack"}}</span>
        <span class="item-detail-sm">{{localize "ARIANRHOD.Range"}}</span>
        <span class="item-detail-sm">{{localize "ARIANRHOD.Weight"}}</span>
        <span class="item-detail-sm">{{localize "ARIANRHOD.Equipped"}}</span>
        <span class="item-controls"></span>
      </li>
      {{#each weapons as |item|}}
      <li class="item flexrow{{#if item.system.equipped}} equipped{{/if}}" data-item-id="{{item._id}}" draggable="true">
        <span class="item-name clickable" data-action="postItem">
          <img src="{{item.img}}" width="24" height="24" />
          {{item.name}}
        </span>
        <span class="item-detail-sm">{{item.system.accuracy}}</span>
        <span class="item-detail-sm">{{item.system.attack}}</span>
        <span class="item-detail-sm">{{item.system.range}}</span>
        <span class="item-detail-sm">{{item.system.weight}}</span>
        <span class="item-detail-sm">
          <a data-action="equipItem" title="{{localize 'ARIANRHOD.ItemEquip'}}">
            <i class="fas {{#if item.system.equipped}}fa-check-circle{{else}}fa-circle{{/if}}"></i>
          </a>
        </span>
        <span class="item-controls">
          <a data-action="editItem" title="{{localize 'ARIANRHOD.ItemEdit'}}"><i class="fas fa-edit"></i></a>
          <a data-action="deleteItem" title="{{localize 'ARIANRHOD.ItemDelete'}}"><i class="fas fa-trash"></i></a>
        </span>
      </li>
      {{/each}}
    </ol>
  </section>

  {{!-- Armor --}}
  <section class="item-section">
    <div class="item-section-header flexrow">
      <h3><i class="fas fa-shield-halved"></i> {{localize "ARIANRHOD.Armor"}}</h3>
      <a data-action="createItem" data-type="armor" title="{{localize 'ARIANRHOD.ItemCreate'}}">
        <i class="fas fa-plus"></i>
      </a>
    </div>
    <ol class="item-list">
      <li class="item-header flexrow">
        <span class="item-name">{{localize "ARIANRHOD.Name"}}</span>
        <span class="item-detail-sm">{{localize "ARIANRHOD.PhysDef"}}</span>
        <span class="item-detail-sm">{{localize "ARIANRHOD.MagDef"}}</span>
        <span class="item-detail-sm">{{localize "ARIANRHOD.Evasion"}}</span>
        <span class="item-detail-sm">{{localize "ARIANRHOD.Weight"}}</span>
        <span class="item-detail-sm">{{localize "ARIANRHOD.Equipped"}}</span>
        <span class="item-controls"></span>
      </li>
      {{#each armors as |item|}}
      <li class="item flexrow{{#if item.system.equipped}} equipped{{/if}}" data-item-id="{{item._id}}" draggable="true">
        <span class="item-name clickable" data-action="postItem">
          <img src="{{item.img}}" width="24" height="24" />
          {{item.name}}
        </span>
        <span class="item-detail-sm">{{item.system.physDef}}</span>
        <span class="item-detail-sm">{{item.system.magDef}}</span>
        <span class="item-detail-sm">{{item.system.evasion}}</span>
        <span class="item-detail-sm">{{item.system.weight}}</span>
        <span class="item-detail-sm">
          <a data-action="equipItem" title="{{localize 'ARIANRHOD.ItemEquip'}}">
            <i class="fas {{#if item.system.equipped}}fa-check-circle{{else}}fa-circle{{/if}}"></i>
          </a>
        </span>
        <span class="item-controls">
          <a data-action="editItem" title="{{localize 'ARIANRHOD.ItemEdit'}}"><i class="fas fa-edit"></i></a>
          <a data-action="deleteItem" title="{{localize 'ARIANRHOD.ItemDelete'}}"><i class="fas fa-trash"></i></a>
        </span>
      </li>
      {{/each}}
    </ol>
  </section>

  {{!-- Accessories --}}
  <section class="item-section">
    <div class="item-section-header flexrow">
      <h3><i class="fas fa-ring"></i> {{localize "ARIANRHOD.Accessory"}}</h3>
      <a data-action="createItem" data-type="accessory" title="{{localize 'ARIANRHOD.ItemCreate'}}">
        <i class="fas fa-plus"></i>
      </a>
    </div>
    <ol class="item-list">
      <li class="item-header flexrow">
        <span class="item-name">{{localize "ARIANRHOD.Name"}}</span>
        <span class="item-detail-wide">{{localize "ARIANRHOD.Effect"}}</span>
        <span class="item-detail">{{localize "ARIANRHOD.Equipped"}}</span>
        <span class="item-controls"></span>
      </li>
      {{#each accessories as |item|}}
      <li class="item flexrow{{#if item.system.equipped}} equipped{{/if}}" data-item-id="{{item._id}}" draggable="true">
        <span class="item-name clickable" data-action="postItem">
          <img src="{{item.img}}" width="24" height="24" />
          {{item.name}}
        </span>
        <span class="item-detail-wide">{{item.system.effect}}</span>
        <span class="item-detail">
          <a data-action="equipItem" title="{{localize 'ARIANRHOD.ItemEquip'}}">
            <i class="fas {{#if item.system.equipped}}fa-check-circle{{else}}fa-circle{{/if}}"></i>
          </a>
        </span>
        <span class="item-controls">
          <a data-action="editItem" title="{{localize 'ARIANRHOD.ItemEdit'}}"><i class="fas fa-edit"></i></a>
          <a data-action="deleteItem" title="{{localize 'ARIANRHOD.ItemDelete'}}"><i class="fas fa-trash"></i></a>
        </span>
      </li>
      {{/each}}
    </ol>
  </section>

  {{!-- General Items --}}
  <section class="item-section">
    <div class="item-section-header flexrow">
      <h3><i class="fas fa-flask"></i> {{localize "ARIANRHOD.Item"}}</h3>
      <a data-action="createItem" data-type="item" title="{{localize 'ARIANRHOD.ItemCreate'}}">
        <i class="fas fa-plus"></i>
      </a>
    </div>
    <ol class="item-list">
      <li class="item-header flexrow">
        <span class="item-name">{{localize "ARIANRHOD.Name"}}</span>
        <span class="item-detail-sm">{{localize "ARIANRHOD.Quantity"}}</span>
        <span class="item-detail-sm">{{localize "ARIANRHOD.Weight"}}</span>
        <span class="item-detail-wide">{{localize "ARIANRHOD.Effect"}}</span>
        <span class="item-controls"></span>
      </li>
      {{#each items as |item|}}
      <li class="item flexrow" data-item-id="{{item._id}}" draggable="true">
        <span class="item-name clickable" data-action="postItem">
          <img src="{{item.img}}" width="24" height="24" />
          {{item.name}}
        </span>
        <span class="item-detail-sm">{{item.system.quantity}}</span>
        <span class="item-detail-sm">{{item.system.weight}}</span>
        <span class="item-detail-wide">{{item.system.effect}}</span>
        <span class="item-controls">
          {{#if item.system.consumable}}
          <a data-action="useItem" title="{{localize 'ARIANRHOD.UseItem'}}" class="ar-use-btn"><i class="fas fa-flask-vial"></i></a>
          {{/if}}
          <a data-action="editItem" title="{{localize 'ARIANRHOD.ItemEdit'}}"><i class="fas fa-edit"></i></a>
          <a data-action="deleteItem" title="{{localize 'ARIANRHOD.ItemDelete'}}"><i class="fas fa-trash"></i></a>
        </span>
      </li>
      {{/each}}
    </ol>
  </section>

  {{!-- Inventory Summary --}}
  <section class="inventory-summary">
    <div class="inventory-summary-row">
      <span class="summary-item">
        <i class="fas fa-cubes"></i>
        <strong>{{localize "ARIANRHOD.TotalItems"}}:</strong> {{totalItems}}
      </span>
      <span class="summary-item">
        <i class="fas fa-weight-hanging"></i>
        <strong>{{localize "ARIANRHOD.TotalWeight"}}:</strong> {{totalWeight}}
      </span>
      <span class="summary-item">
        <i class="fas fa-coins"></i>
        <strong>{{localize "ARIANRHOD.TotalValue"}}:</strong> {{totalValue}}{{localize "ARIANRHOD.CurrencyUnit"}}
      </span>
    </div>
  </section>

</section>
