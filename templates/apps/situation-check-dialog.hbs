{{!-- Situation Check Dialog (GM Tool) --}}
<div class="ar-sc-dialog">
  {{!-- Tab Navigation --}}
  <nav class="ar-sc-tabs">
    <button type="button" class="ar-sc-tab-btn" data-tab="gatherInfo" data-action="switchTab">
      <i class="fas fa-search"></i> {{localize "ARIANRHOD.GatherInfo"}}
    </button>
    <button type="button" class="ar-sc-tab-btn" data-tab="negotiate" data-action="switchTab">
      <i class="fas fa-comments"></i> {{localize "ARIANRHOD.Negotiate"}}
    </button>
    <button type="button" class="ar-sc-tab-btn" data-tab="appraise" data-action="switchTab">
      <i class="fas fa-gem"></i> {{localize "ARIANRHOD.Appraise"}}
    </button>
  </nav>

  {{!-- Gather Information Tab --}}
  <div class="ar-sc-tab-panel" data-tab="gatherInfo">
    {{#if hasPCs}}
    <div class="ar-sc-section">
      <div class="form-group">
        <label>{{localize "ARIANRHOD.SelectPC"}}</label>
        <select name="pc-gatherInfo">
          {{#each pcs as |pc|}}
          <option value="{{pc.id}}">{{pc.name}} (Lv.{{pc.level}})</option>
          {{/each}}
        </select>
      </div>
      <div class="form-group">
        <label>{{localize "ARIANRHOD.Abilities"}}</label>
        <select name="ability-gatherInfo">
          {{#each abilities as |ab|}}
          <option value="{{ab.key}}" {{#if (eq ab.key "sen")}}selected{{/if}}>{{ab.label}}</option>
          {{/each}}
        </select>
      </div>
      <div class="form-group">
        <label>{{localize "ARIANRHOD.Difficulty"}}</label>
        <input type="number" name="dc" value="" placeholder="—" min="1" />
      </div>
      <div class="ar-sc-presets">
        {{#each gatherPresets as |p|}}
        <button type="button" class="ar-sc-preset-btn" data-action="setDC" data-dc="{{p.dc}}">
          {{p.label}}
        </button>
        {{/each}}
      </div>
    </div>
    <footer class="ar-sc-footer">
      <button type="button" data-action="rollCheck" class="ar-btn-primary">
        <i class="fas fa-dice"></i> {{localize "ARIANRHOD.Roll"}}
      </button>
    </footer>
    {{else}}
    <p class="no-pcs">{{localize "ARIANRHOD.NoPCsFound"}}</p>
    {{/if}}
  </div>

  {{!-- Negotiate Tab --}}
  <div class="ar-sc-tab-panel" data-tab="negotiate" style="display:none;">
    {{#if hasPCs}}
    <div class="ar-sc-section">
      <div class="ar-sc-hint">
        <i class="fas fa-info-circle"></i>
        {{localize "ARIANRHOD.NegotiateOpposed"}}
      </div>
      <div class="form-group">
        <label>{{localize "ARIANRHOD.SelectPC"}}</label>
        <select name="pc-negotiate">
          {{#each pcs as |pc|}}
          <option value="{{pc.id}}">{{pc.name}} (Lv.{{pc.level}})</option>
          {{/each}}
        </select>
      </div>
      <div class="form-group">
        <label>{{localize "ARIANRHOD.Difficulty"}}</label>
        <input type="number" name="dc" value="" placeholder="—" min="1" />
      </div>
    </div>
    <footer class="ar-sc-footer">
      <button type="button" data-action="rollCheck" class="ar-btn-primary">
        <i class="fas fa-dice"></i> {{localize "ARIANRHOD.Roll"}}
      </button>
    </footer>
    {{else}}
    <p class="no-pcs">{{localize "ARIANRHOD.NoPCsFound"}}</p>
    {{/if}}
  </div>

  {{!-- Appraise Tab --}}
  <div class="ar-sc-tab-panel" data-tab="appraise" style="display:none;">
    {{#if hasPCs}}
    <div class="ar-sc-section">
      <div class="ar-sc-hint ar-sc-hint-warn">
        <i class="fas fa-exclamation-triangle"></i>
        {{localize "ARIANRHOD.AppraiseNoRetry"}}
      </div>
      <div class="form-group">
        <label>{{localize "ARIANRHOD.SelectPC"}}</label>
        <select name="pc-appraise">
          {{#each pcs as |pc|}}
          <option value="{{pc.id}}">{{pc.name}} (Lv.{{pc.level}})</option>
          {{/each}}
        </select>
      </div>
      <div class="form-group">
        <label>{{localize "ARIANRHOD.Difficulty"}}</label>
        <input type="number" name="dc" value="" placeholder="—" min="1" />
      </div>
    </div>
    <footer class="ar-sc-footer">
      <button type="button" data-action="rollCheck" class="ar-btn-primary">
        <i class="fas fa-dice"></i> {{localize "ARIANRHOD.Roll"}}
      </button>
    </footer>
    {{else}}
    <p class="no-pcs">{{localize "ARIANRHOD.NoPCsFound"}}</p>
    {{/if}}
  </div>
</div>
